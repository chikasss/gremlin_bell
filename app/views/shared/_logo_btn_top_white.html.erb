<div class="d-flex justify-content-between py-4 logo-btn-top">
  <div class="d-flex justify-content-start back-btn">
    <%= link_to (request.referrer || root_path) do %>
      <i class="fa-solid fa-circle-chevron-left"></i>
    <% end %>
  </div>
  <div class="dropdown">
    <button type="button" data-bs-toggle="dropdown" aria-expanded="false">
      <%= image_tag 'logo-white.svg', class:"logo-icon" %>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to "Home", root_path, class: "dropdown-item" %></li>
      <li><%= link_to "Profile", user_path(current_user), class: "dropdown-item" %></li>
      <li><%= link_to "New post", new_user_post_path(current_user), class: "dropdown-item" %></li>
      <li><%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %></li>
    </ul>
  </div>
</div>